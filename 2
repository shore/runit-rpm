#!/bin/sh

PATH=/usr/local/bin:/usr/local/sbin:/bin:/sbin:/usr/bin:/usr/sbin

envset=""
if [ -d /etc/runit/envdir-runsvdir ]; then
	envset="/sbin/chpst -e /etc/runit/envdir-runsvdir"
fi

exec env - PATH=$PATH \
$envset /sbin/runsvdir -P /service 'log: ...........................................................................................................................................................................................................................................................................................................................................................................................................'
